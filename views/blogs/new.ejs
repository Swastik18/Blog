<% layout('layouts/boilerplate')%>


<div class="container">
  <h1>New Blog</h1>

  <form action="/blogs" method="POST" novalidate class="validated-form">
    <div class="form-group">
      <label for="title">Title</label>
      <input  type="text" name="blog[title]" id="title" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea  name="blog[description]" id="description" class="form-control" required></textarea>
    </div>
    <div class="form-group">
      <label for="markdown">Markdown</label>
      <textarea  name="blog[markdown]" id="markdown" class="form-control mb-4" required></textarea>
    </div>
    
    <a href="/" class="btn btn-secondary">Cancel</a>
      <button class="btn btn-success">Save</button>
  </form>
</div>
